@model MyFinances.Model.ProductWithPrices

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductSubcategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductSubcategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCategoryName)
        </dd>
    </dl>
    <h3>@Html.DisplayNameFor(model => model.Prices)</h3>
    @if (Model.Prices.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Prices)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Prices)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RetailerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>This product was not bought yet</p>
    }
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }) |
    <a asp-action="Index">Back to List</a>
</div>
